<div class='col-md-6 col-md-offset-3'>
  <% @posts.each do |post| %>
    <div class='post col-md-12'>
      <h5 class='post-user'><%= link_to post.user_name, blogger_path(post.user_id) %></h5>
      <h3><%= link_to post.title, post_path(post) %></h3>
      <P><%= truncate(post.body, length: 100) %></p>
      <p style='float:right;'>&nbsp;<%= post.likes %></p>
      <a href="/like/<%= post.id %>" style='float:right;'><i class='fa fa-heart'></i></a>
    </div>
  <% end %>
</div>
